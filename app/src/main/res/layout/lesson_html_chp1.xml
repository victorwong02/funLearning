<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lesson_html_chp1">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/HTML_chap1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="64dp"
                android:text="@string/htmlChap1Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/HTML_doc_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:text="@string/htmlDocSample"
                app:layout_constraintStart_toStartOf="@+id/HTML_chap1_title"
                app:layout_constraintTop_toBottomOf="@+id/HTML_chap1_title" />

            <ImageView
                android:id="@+id/HTML_doc_sample_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/htmlDocSamplePic"
                app:layout_constraintStart_toStartOf="@+id/HTML_doc_sample"
                app:layout_constraintTop_toBottomOf="@+id/HTML_doc_sample"
                app:srcCompat="@drawable/html_document_sample_" />

            <TextView
                android:id="@+id/HTML_heading_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/htmlHeadingTitle"
                app:layout_constraintStart_toStartOf="@+id/HTML_doc_sample_pic"
                app:layout_constraintTop_toBottomOf="@+id/HTML_doc_sample_pic" />

            <TextView
                android:id="@+id/HTML_heading_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/htmlHeadingDes"
                app:layout_constraintStart_toStartOf="@+id/HTML_heading_title"
                app:layout_constraintTop_toTopOf="@+id/HTML_heading_title" />

            <ImageView
                android:id="@+id/HTML_heading_sample_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                app:layout_constraintStart_toStartOf="@+id/HTML_heading_des"
                app:layout_constraintTop_toTopOf="@+id/HTML_heading_des"
                app:srcCompat="@drawable/html_heading_sample" />

            <TextView
                android:id="@+id/HTML_paragraph_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/htmlParagraphTitle"
                app:layout_constraintStart_toStartOf="@+id/HTML_heading_sample_pic"
                app:layout_constraintTop_toBottomOf="@+id/HTML_heading_sample_pic" />

            <TextView
                android:id="@+id/HTML_paragraph_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/htmlParagraphDes"
                app:layout_constraintStart_toStartOf="@+id/HTML_paragraph_title"
                app:layout_constraintTop_toBottomOf="@+id/HTML_paragraph_title" />






        </androidx.constraintlayout.widget.ConstraintLayout>






    </ScrollView>



</FrameLayout>